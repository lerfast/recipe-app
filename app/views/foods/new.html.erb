<h2>Add New Food</h2>

<%= form_with(model: @food, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <div>
    <%= form.label :measurement_unit %>
    <%= form.select :measurement_unit, ['grams', 'kilograms', 'units', 'liters', 'mililiters', 'pounds'] %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.submit 'Create Food', class: 'button' %>
  </div>
<% end %>
