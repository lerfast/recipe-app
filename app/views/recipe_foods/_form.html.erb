<%= form_with(model: [@recipe, @recipe_food], local: true) do |form| %>
  <div class="field">
    <%= form.label :food_id, 'Food' %>
    <%= form.collection_select :food_id, @foods, :id, :name, prompt: 'Select a food' %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
